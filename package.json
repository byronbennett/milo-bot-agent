{
  "name": "milo-bot-agent",
  "version": "0.1.0",
  "description": "MiloBot CLI Agent - Remote control for Claude Code",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "milo": "./dist/bin/milo.js"
  },
  "scripts": {
    "dev": "node --import tsx/esm --watch app/bin/milo.ts start --foreground",
    "build": "tsup",
    "link-cli": "tsup && pnpm link --global",
    "start": "node dist/index.js",
    "lint": "eslint app/",
    "typecheck": "tsc --noEmit",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.0",
    "@inquirer/prompts": "^7.2.1",
    "@mariozechner/pi-agent-core": "0.52.12",
    "@mariozechner/pi-ai": "0.52.12",
    "@sinclair/typebox": "0.34.48",
    "adm-zip": "^0.5.16",
    "better-sqlite3": "^12.6.2",
    "commander": "^12.1.0",
    "node-cron": "^3.0.3",
    "open": "9",
    "pubnub": "^8.10.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.0",
    "@types/node-cron": "^3.0.11",
    "eslint": "^9.17.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "tsup": "^8.3.5",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "workspace-template"
  ],
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ]
  }
}